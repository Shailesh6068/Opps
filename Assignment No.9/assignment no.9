void matrix::operator*(matrix m2) {
    int mat[2][2] = {{0, 0}, {0, 0}};
    cout << endl;
    cout << "The Multiplication of Matrix 1 and Matrix 2 is:" << endl;
    for (int i = 0; i < 2; ++i) {
        for (int j = 0; j < 2; ++j) {
            for (int k = 0; k < 2; ++k) {
                mat[i][j] += a[i][k] * m2.a[k][j];
            }
        }
    }

    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            cout << mat[i][j] << "  ";
