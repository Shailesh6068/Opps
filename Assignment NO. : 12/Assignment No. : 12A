#include<iostream>
using namespace std;
class employe
{
int age,count;
float salary,b_s,DA,HRA;
long long int ph;
string name ,Depart,emp_id ;

public:
void getdata();
void putdata();
void excepion();
};
void employe::getdata()
{   
    cout<<"Enter the information of Employe : "<<endl;
    cout<<"Name :";
    cin>>name;
    cout<<"Employe ID ('123B1B***'):";
    cin>>emp_id;
    cout<<"Departement :";
    cin>>Depart;
    cout<<"Age :";
    cin>>age;
    cout<<"Phone Number :";
    cin>>ph;
    excepion();
    cout<<"Basic Salary :";
    cin>>b_s;
    cout<<"DA and HRA :";
    cin>>DA>>HRA;
}
void employe::excepion()
{   
    count = 0;
    long long int temp = ph;
     while(temp > 0)
    {
        temp = temp/10;
        count++;
    }
    
    if (count != 10)
    {    
        try
        {
            if (count > 10 )
            {
            throw(0);
            }
            if (count < 10)
            {
                throw('a');
            }
        }
        catch(int x)
        {
            cout<<"Error : The Number of Digits in Phone Numbers is greater than 10."<<endl;
            cout<<"Rewrite Correct Phone Number :";
            cin>>ph;
            excepion();
            
          
        }
        catch(char y)
        {
            cout<<"Error : The Numbers of Digits in Phone Number is less than 10."<<endl;
            cout<<"Rewrite Correct Phone Number :";
            cin>>ph;
            excepion();           
        }
    }  
}
void employe::putdata()
{   
    cout<<"Enter the information of Employe : "<<endl;
    cout<<"Name :";
    cout<<name<<endl;
    cout<<"Employe ID :";
    cout<<emp_id<<endl;
    cout<<"Departement :";
    cout<<Depart<<endl;
    cout<<"Age :";
    cout<<age<<endl;
    cout<<"Phone Number :";  
    cout<<ph<<endl;
    salary = DA + HRA + b_s;
    cout<<"Salary :";
    cout<<salary<<endl;
}
int main()
{
    employe b1; 
    int ch;
    string choice;
    cout << "The choices number are as following: "<< endl
         << "   1: Fill the profile." << endl
         << "   2: show the profile." << endl<<endl;

    do
    {
        cout << "Enter the choice Number: "<<endl;
        cin >> ch;
        cout<<endl;
        switch (ch)
        {
        case 1:
            b1.getdata();
            break;

        case 2:
            b1.putdata();
            break;

        default:
            cout << "The choice selected by you is invalid.";
        }
        cout<<endl;
        cout << "Do you wan't to continue again Yes/No:";
        cin >> choice;
        cout<<endl;

    } while (choice == "Yes");

return 0;
}
